---
import astroConfig from "../../astro.config.mjs";
---

<nav class="navbar navbar-expand-lg py-4 bg-light mx-auto">
  <div class="container d-flex justify-content-space-between">
    <a class="navbar-brand" href={astroConfig.site}>
      <img
        src="images/logo.png"
        alt="Logo Radiodent"
        class="img-fluid"
        width="250"
      />
    </a>
    <button
      class="navbar-toggler shadow-none border-0"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasRight"
      aria-controls="offcanvasRight"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="offcanvas offcanvas-start bg-light main-color"
      tabindex="-1"
      id="offcanvasRight"
      aria-labelledby="offcanvasRightLabel"
      style="backdrop-filter: blur(10px);"
    >
      <div class="offcanvas-header border-bottom">
        <a class="navbar-brand" href={astroConfig.site}>
          <img src="images/logo.png" alt="Logo Radiodent" width="250" />
        </a>
        <button
          type="button"
          class="btn-close main-color shadow-none me-2"
          data-bs-dismiss="offcanvas"
          aria-label="Close"></button>
      </div>
      <div
        class="offcanvas-body d-flex flex-column justify-content-end align-items-end"
      >
        <ul class="navbar-nav">
          <li class="nav-item">
            <a
              class="nav-link active"
              aria-current="page"
              data-bs-dismiss="offcanvas"
              href={astroConfig.site + (astroConfig.base || "/")}
            >
              Página inicial
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-dismiss="offcanvas"
              href={astroConfig.site + (astroConfig?.base || "/") + "exames"}
            >
              Exames</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-dismiss="offcanvas"
              href={astroConfig.site + (astroConfig?.base || "/") + "convenios"}
            >
              Convênios</a
            >
          </li>

          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-dismiss="offcanvas"
              href={astroConfig.site +
                (astroConfig?.base || "/") +
                "requisicao"}
            >
              Requisição</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-dismiss="offcanvas"
              href={astroConfig.site + (astroConfig?.base || "/") + "sobre"}
            >
              Quem somos</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-dismiss="offcanvas"
              href={astroConfig.site + (astroConfig?.base || "/") + "contato"}
            >
              Contato</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<style>
  nav ul li a {
    color: #005697;
    font-size: 1.1rem;
  }

  nav ul li a:hover {
    color: #005697;
    opacity: 0.8;
  }
</style>
