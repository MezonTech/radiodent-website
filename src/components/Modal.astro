---
const { index, servico } = Astro.props;
---

<div
  class="modal fade modal-lg"
  id={`modal-${index}`}
  tabindex="-1"
  aria-labelledby={`modalLabel-${index}`}
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id={`modalLabel-${index}`}>
          {servico.categoria}
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
        <h6 class="fw-bold">Descrição</h6>
        <hr class="border border-custom border-3 opacity-75 w-25 mb-4" />
        <div set:html={servico.descricao} />
        {
          servico.tipos?.map((tipo, idx) => (
            <div>
              <h6 class="fw-bold">{tipo.titulo}</h6>
              <ul class="list-group">
                {tipo.opcoes?.map((opcao) => (
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <h5 class="mb-1">{opcao.nome}</h5>
                        <p class="mb-0 text-muted">{opcao.descricao}</p>
                        {opcao.finalidade && (
                          <small class="text-muted">
                            Finalidade: {opcao.finalidade}
                          </small>
                        )}
                      </div>
                      <i class="bi bi-chevron-right text-muted" />
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
          >Fechar</button
        >
      </div>
    </div>
  </div>
</div>
