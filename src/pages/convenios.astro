  { nome: "Metlife", logo: "/images/convenios/metlife.png" },
  {
    nome: "Odonto Medical Group",
    logo: "/images/convenios/odonto-medical-group.png",
  },
  { nome: "Odontoempresa", logo: "/images/convenios/odontoempresa.png" },
  { nome: "Odontolife", logo: "/images/convenios/odontolife.png" }, // Adicionado
