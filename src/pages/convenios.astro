  { nome: "Uniodonto", logo: "/images/convenios/uniodonto.png" },
];

const documentosObrigatorios = [
  "Carteirinha do convênio",
  "Documento de identificação com foto",
  "Pedido médico ou odontológico (se necessário)",
  "Comprovante de pagamento do plano (caso solicitado)",
];
---

<Layout
  title="Convênios - Radiodent Radiologia Odontológica"
  class:list={"transition-fade"}
>
  <div class="container my-5">
    <h4 class="fw-bold main-color">Convênios Atendidos</h4>
    <p class="text-muted">
      Confira abaixo os convênios aceitos em nossa clínica.
    </p>
    <hr class="border border-custom border-3 opacity-75 w-25 mb-4" />

    <div class="row">
      {
        convenios.map((convenio) => (
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card text-center shadow-sm border-0 rounded-4 p-3">
              <img
                src={astroConfig.site + astroConfig.base + convenio.logo}
                alt={convenio.nome}
                class="img-fluid mx-auto d-block"
              />
              <h6 class="mt-3 fw-bold">{convenio.nome}</h6>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-5 p-4 bg-light rounded">
      <h3 class="fw-bold">Documentos Necessários</h3>
      <p class="text-muted">
        Para garantir o atendimento pelo convênio, leve os seguintes documentos
        à clínica:
      </p>
      <ul class="list-group">
        {
          documentosObrigatorios.map((doc) => (
            <li class="list-group-item">{doc}</li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>

<style>
  .card {
    transition:
      transform 0.3s ease-in-out,
      box-shadow 0.3s ease-in-out;
  }

  .card:hover {
    transform: translateY(-5px);
    cursor: pointer;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }

  .bg-light {
    border-bottom: 5px solid --bs-primary;
  }
</style>
